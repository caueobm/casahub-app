<!-- res/layout/layout_toolbar.xml -->
<com.google.android.material.appbar.MaterialToolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topAppBar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:theme="?attr/actionBarTheme"
    android:background="@color/toolbar_background"
    app:title="CasaHub"
    app:titleTextAppearance="@style/ToolbarTitle">  <!-- Linha adicionada -->



    <!-- Cria um botão de "Login" à direita da barra de ferramentas. -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_gravity="end|center_vertical"
        android:text="@string/login"
        android:layout_marginEnd="16dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/logout"
        android:layout_marginEnd="16dp"
        android:layout_gravity="end|center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnListarClientes"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="end|center_vertical"
        android:text="@string/listar_clientes"
        android:layout_marginEnd="16dp"/>



</com.google.android.material.appbar.MaterialToolbar>
