<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetalheImovelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ProgressBar
            android:id="@+id/progressBarDetalhe"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDetalheError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Falha ao carregar detalhes."
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvDetalheTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Tipo do Imóvel" />

        <TextView
            android:id="@+id/tvDetalheEnderecoCompleto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            tools:text="Endereço Completo, Número" />

        <TextView
            android:id="@+id/tvDetalheCidadeEstadoCep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            tools:text="Cidade - Estado, CEP: 00000-000" />

        <TextView
            android:id="@+id/tvDetalheValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDetalheDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            tools:text="Descrição longa e detalhada do imóvel, falando sobre suas características, vantagens, e tudo mais que for relevante para o interessado." />

        <TextView
            android:id="@+id/tvDetalheQuartos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            tools:text="Quartos: 3" />

        <TextView
            android:id="@+id/tvDetalheBanheiros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            tools:text="Banheiros: 2" />

        <TextView
            android:id="@+id/tvDetalheMetragem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            tools:text="Metragem: 120 m²" />

        <TextView
            android:id="@+id/tvDetalheMobiliado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            tools:text="Mobiliado: Sim" />

        <TextView
            android:id="@+id/tvDetalheDisponivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            tools:text="Disponível: Sim" />

        <TextView
            android:id="@+id/tvDetalheDataCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textStyle="italic"
            tools:text="Cadastrado em: 01/01/2023" />

    </LinearLayout>
</ScrollView>